<%= form_with model: @task do |f| %>
  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <%#  %>
  <% if @task.id.present? %>
    <%= f.select :status, Task::STATUS %>
  <% end %>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>

