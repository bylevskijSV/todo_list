<% unless @tasks.empty? %>
  <div class="container">
    <div class="row">
      <div class="col">
        <p class="text-center">Task</p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        Title
      </div>
      <div class="col-sm">
        Description
      </div>
      <div class="col-sm">
        Status
      </div>
    </div>

    <% @tasks.each do |task| %>
      <%= render partial: 'task', object: task%>
    <% end%>

    <%= link_to 'Create task', new_task_path, class: 'btn btn-primary'%>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-sm text-center">
        No task
      </div>
    </div>
    <div class="row">
      <div class="col-sm text-center">
        <%= link_to 'Create task', new_task_path, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
<% end%>

<% unless @completed_tasks.empty? %>
  <div class="container">
    <div class="row">
      <div class="col">
        <p class="text-center">Task done</p>
      </div>
    </div>

    <% @completed_tasks.each do |task| %>
      <%= render partial: 'task', object: task%>
    <% end %>
  </div>
<% end %>
